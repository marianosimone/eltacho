<header class="page-header">
  <span>El Tacho!</span>
  <a href="/event/new" class="btn btn-success">Crear Evento</a>
</header>

<div class="container">
    <div class="row">
        <div class="span12" >
            <ul class="thumbnails">
                <% for event in events %>
                    <li class="span4" type="misc">
                        <div class="thumbnail">
                            <a rel="lightbox" href="event/<%=event.id%>">
                                <img src="/img/event_<%=event.id%>.jpg" width="350" height="150"/>
                                <h5><%=event.name%></h5>
                            </a>  
                        </div>
                    </li>
                <% end %>
            </ul>
        </div>
    </div>
</div>